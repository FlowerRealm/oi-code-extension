{
  "name": "oi-code",
  "displayName": "OI-Code",
  "description": "OI/ACM 竞赛编程助手",
  "version": "0.0.1",
  "publisher": "FlowerRealm",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlowerRealm/oi-code-extension.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "oi-code.showWelcomePage",
        "title": "OI-Code: 重新初始化"
      },
      {
        "command": "oicode.createProblem",
        "title": "OI-Code: 新建题目"
      },
      {
        "command": "oi-code.showSettingsPage",
        "title": "OI-Code: 打开设置IDE"
      },
      {
        "command": "oicode.startPairCheck",
        "title": "OI-Code: 对拍"
      },
      {
        "command": "oicode.runCode",
        "title": "OI-Code: 运行"
      },
      {
        "command": "oicode.initializeEnvironment",
        "title": "OI-Code: 初始化编译环境"
      },
      {
        "command": "oicode.downloadDocker",
        "title": "OI-Code: 安装Docker"
      }
    ],
    "menus": {},
    "viewsContainers": {
      "activitybar": [
        {
          "id": "oicode-activity",
          "title": "OI-Code",
          "icon": "webview/icons/beaker.svg"
        }
      ],
      "panel": [
        {
          "id": "oicode-panel",
          "title": "OI-Code",
          "icon": "webview/icons/beaker.svg"
        }
      ]
    },
    "views": {
      "oicode-activity": [
        {
          "id": "oicode.problemView",
          "name": "题目",
          "icon": "webview/icons/beaker.svg"
        }
      ],
      "oicode-panel": [
        {
          "id": "oicode.pairCheckView",
          "name": "对拍",
          "icon": "webview/icons/beaker.svg"
        }
      ]
    },
    "configuration": {
      "title": "OI-Code Configuration",
      "properties": {
        "oicode.compile.opt": {
          "type": "string",
          "enum": [
            "O0",
            "O1",
            "O2",
            "O3"
          ],
          "default": "O2",
          "description": "默认优化等级，会在 C/C++ 编译命令中注入/覆盖 -O?。"
        },
        "oicode.compile.std": {
          "type": "string",
          "enum": [
            "c++17",
            "c++14",
            "c++11",
            "c11",
            "c99"
          ],
          "default": "c++17",
          "description": "默认语言标准，会在 C/C++ 编译命令中注入/覆盖 -std=...。"
        },
        "oicode.docker.compilers": {
          "type": "object",
          "description": "Configure Docker compiler commands and arguments for different languages.",
          "properties": {
            "cpp": {
              "type": "object",
              "description": "C++ compiler settings for Docker.",
              "properties": {
                "command": {
                  "type": "string",
                  "description": "The C++ compiler command (e.g., 'g++')."
                },
                "args": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Arguments for the C++ compiler. Use /sandbox/${sourceFile} for source, /tmp/a.out for output."
                }
              },
              "default": {
                "command": "g++",
                "args": [
                  "/sandbox/${sourceFile}",
                  "-o",
                  "/tmp/a.out",
                  "-O2",
                  "-std=c++17"
                ]
              }
            },
            "c": {
              "type": "object",
              "description": "C compiler settings for Docker.",
              "properties": {
                "command": {
                  "type": "string",
                  "description": "The C compiler command (e.g., 'gcc')."
                },
                "args": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Arguments for the C compiler. Use /sandbox/${sourceFile} for source, /tmp/a.out for output."
                }
              },
              "default": {
                "command": "gcc",
                "args": [
                  "/sandbox/${sourceFile}",
                  "-o",
                  "/tmp/a.out",
                  "-O2"
                ]
              }
            },
            "python": {
              "type": "object",
              "description": "Python interpreter settings for Docker.",
              "properties": {
                "command": {
                  "type": "string",
                  "description": "The Python interpreter command (e.g., 'python3')."
                },
                "args": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Arguments for the Python interpreter. Use /sandbox/${sourceFile} for source."
                }
              },
              "default": {
                "command": "python3",
                "args": [
                  "/sandbox/${sourceFile}"
                ]
              }
            }
          }
        },
        "oi-code.language.c.Command": {
          "type": "string",
          "description": "Path to the C compiler (e.g., /usr/bin/gcc)."
        },
        "oi-code.language.c.Args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Arguments for the C compiler (e.g., -Wall -O2 -std=c11)."
        },
        "oi-code.language.cpp.Command": {
          "type": "string",
          "description": "Path to the C++ compiler (e.g., /usr/bin/g++)."
        },
        "oi-code.language.cpp.Args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Arguments for the C++ compiler (e.g., -Wall -O2 -std=c++17)."
        },
        "oi-code.language.python.Command": {
          "type": "string",
          "description": "Path to the Python interpreter (e.g., /usr/bin/python3)."
        },
        "oi-code.language.python.Args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Arguments for the Python interpreter (e.g., -u)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && tsc -p ./src/test/tsconfig.json && node ./out/test/runTest.js",
    "test:log": "npm test > test-output.log 2>&1"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "copy-webpack-plugin": "^13.0.0",
    "diff": "^5.2.0",
    "eslint": "^8.47.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}